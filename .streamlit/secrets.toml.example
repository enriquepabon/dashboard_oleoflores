# ===========================================
# STREAMLIT SECRETS TEMPLATE
# ===========================================
# Copia este contenido a .streamlit/secrets.toml (local)
# O a Streamlit Cloud > Settings > Secrets (producci칩n)

# ===========================================
# GOOGLE OAUTH AUTHENTICATION
# ===========================================

[auth]
# Para producci칩n: https://TU-APP.streamlit.app/oauth2callback
# Para local: http://localhost:8501/oauth2callback
redirect_uri = "https://TU-APP.streamlit.app/oauth2callback"

# Generar con: python -c "import secrets; print(secrets.token_hex(32))"
cookie_secret = "GENERA_UN_SECRET_SEGURO_AQUI"

# Obtener de Google Cloud Console > APIs & Services > Credentials
client_id = "TU_CLIENT_ID.apps.googleusercontent.com"
client_secret = "TU_CLIENT_SECRET"

# No cambiar - URL est치ndar de Google OIDC
server_metadata_url = "https://accounts.google.com/.well-known/openid-configuration"

# ===========================================
# USUARIOS AUTORIZADOS
# ===========================================

[auth.users]
# Emails autorizados (solo @oleoflores.com)
authorized = [
    "admin@oleoflores.com",
    "usuario1@oleoflores.com"
]

# Administradores (acceso al panel de gesti칩n)
admins = [
    "admin@oleoflores.com"
]
